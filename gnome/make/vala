autoreconf -i
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
    "${GNOME_MAKE_ARGS[@]}" \
    --docdir=/usr/doc/$PRGNAM-$VERSION \
    $GRAPHVIZ_SUPPORT

# Hack to build if valac isn't already installed:
if [ ! -r /usr/bin/valac ]; then
  PATH=$(pwd)/compiler:$PATH
fi

make
make install DESTDIR=$PKG
