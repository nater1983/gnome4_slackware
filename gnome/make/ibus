CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
../configure \
    "${GNOME_MAKE_ARGS[@]}" \
      --enable-python-library \
      --with-python=python3 \
      --with-unicode-emoji-dir=../${PKGNAME}-${MODULAR_PACKAGE_VERSION} \
      --with-ucd-dir=../${PKGNAME}-${MODULAR_PACKAGE_VERSION} \
      --disable-systemd-services
../make
../make install DESTDIR=$PKG
