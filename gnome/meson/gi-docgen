mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Ddevelopment_tests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..

python3 setup.py build
python3 setup.py install --root=$PKG --optimize=1 --skip-build
