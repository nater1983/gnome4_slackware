mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Dtests=false \
    -Dumockdev_tests=disabled \
    -Dvendor_ids_dir=/usr/share/hwdata/ \
    -Db_lto=true \
    -Dbuild=all \
    -Dconsolekit=disabled \
    -Delogind=enabled \
    -Dfirmware-packager=true \
    -Dgcab:docs=false \
    -Dhsi=enabled \
    -Dlvfs=true \
    -Dman=true \
    -Dpassim=disabled \
    -Defi_binary=true \
    -Dplugin_amdgpu=enabled \
    -Dplugin_redfish=disabled \
    -Dplugin_flashrom=disabled \
    -Dplugin_uefi_capsule=enabled \
    -Dsupported_build=enabled \
    -Dsystemd=disabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
