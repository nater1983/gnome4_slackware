mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Degl_device=true \
    -Dwayland_eglstream=true \
    -Dcogl_tests=false \
    -Dclutter_tests=false \
    -Dtests=disabled \
    -Dx11=true \
    -Dinstalled_tests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
